<UserControl 
    x:Class="RevitPlugin.xamls.families"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:RevitPlugin.xamls"
    mc:Ignorable="d" Height="409"
    Background="#FFFFFF" Width="374">

    <Grid x:Name="grid" Margin="13,10,13,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Families" FontWeight="Bold" FontSize="18" />
            <RichTextBox></RichTextBox>
        </StackPanel>
        <StackPanel Background="#DDD" Grid.Row="1" Margin="0,13" Name="FilesList">

        </StackPanel>
    </Grid>
</UserControl>
